{% extends 'base.html.twig' %}

{% block title %}Modifier le contact{% endblock %}

{% block body %}

<h1>Modifier le contact</h1>

{{ form_start(form) }}
        {{ form_row(form.firstname) }}
        {{ form_row(form.lastname) }}
        {{ form_row(form.dateOfBirth) }}
        {{ form_row(form.code) }}
        {{ form_row(form.country) }}
<div class="my-3">
