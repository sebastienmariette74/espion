{% extends 'base.html.twig' %}

{% block title %}{{mission.title}}{% endblock %}

{% block body %}
<nav aria-label="breadcrumb">
    <ol class="breadcrumb">
      <li class="breadcrumb-item"><a href="{{ path('admin_missions') }}">Missions</a></li>
      <li class="breadcrumb-item active" aria-current="page">{{ mission.title }}</li>
    </ol>
  </nav>

<h1 class="mb-3">{{ mission.title }}</h1>
<div>

  <table class="table table-show">
    <tbody>
      <tr>
        <th scope="row">Titre</th>
        <td>{{ mission.title }}</td>
      </tr>
      <tr>
        <th scope="row" colspan="2" class="no-border">Description</th>        
      </tr>
      <tr >
        <td colspan="2">{{ mission.description | raw }}</td>
      </tr>      
      <tr>
        <th scope="row">Nom de code</th>
        <td>{{ mission.codeName }}</td>
      </tr>
      <tr>
        <th scope="row">Date de début</th>
        <td>{{ mission.beginAt | date('d-m-Y') }}</td>
      </tr>
      <tr>
        <th scope="row">Date de fin</th>
        <td>{{ mission.finishAt | date('d-m-Y') }}</td>
      </tr>
      <tr>
        <th scope="row">Pays</th>
        <td>{{ mission.country.name }}</td>
      </tr>
      <tr>
        <th scope="row">Type</th>
        <td>{{ mission.type }}</td>
      </tr>
      <tr>
        <th scope="row">Statut</th>
        <td>{{ mission.status }}</td>
      </tr>
      <tr>
        <th scope="row">Spécialité</th>
        <td>{{ mission.speciality }}</td>
      </tr>
      <tr>
        <th scope="row">Planque(s)</th>
        <td class="height-li">
          <ul>
          {% for hidingPlace in mission.hidingPlace %}        
          <li data-firsturl = "hidingPlace" >{{ hidingPlace.code }}</li>
          {% endfor %}
          </ul>
        </td>
      </tr>
      <tr>
        <th scope="row">Agent(s)</th>
        <td>
          <ul>
          {% for agent in mission.agent %}        
          <li data-firsturl = "agent">{{ agent.code }}</li>
          {% endfor %}
          </ul>
        </td>
      </tr>
      <tr>
        <th scope="row">Cible(s)</th>
        <td>
          <ul>
          {% for target in mission.target %}        
          <li data-firsturl = "target">{{ target.code }}</li>
          {% endfor %}
          </ul>
        </td>
      </tr>
    </tbody>
  </table>

</div>

{% endblock %}