{% extends 'base.html.twig' %}

{% block title %}Les planques{% endblock %}

{% block body %}

<h1 class="mb-3">Les planques
    <a href="{{ path('admin_hidingPlaces_create') }}"><img src="{{ asset('build/images/plus.png') }}"
            alt="Ajouter une planque" class="img-fluid"></a>
</h1>

<table class="table">
    <thead>
        <tr>
            <th scope="col">Code</th>
            <th scope="col">Type</th>
            <th scope="col">Pays</th>
            <th></th>
            <th></th>
        </tr>
    </thead>
    <tbody class="table-group-divider">
        {% for hidingPlace in hidingPlaces %}
        <tr>
            <td>{{ hidingPlace.code }}</td>
            <td>{{ hidingPlace.type.name }}</td>
            <td>{{ hidingPlace.country }}</td>
            <td><a href="{{ path('admin_hidingPlaces_update' ,{id : hidingPlace.id}) }}">
                    <img src="{{ asset('build/images/edit.png') }}" alt="" class="img-fluid">
                </a>
            </td>
            <td>
                <a href="{{ path('admin_hidingPlaces_delete', {id : hidingPlace.id}) }}">
                    <img src="{{ asset('build/images/delete.png') }}" alt="" class="img-fluid">
                </a>
            </td>
        </tr>
        {% endfor %}
    </tbody>
</table>

{% endblock %}